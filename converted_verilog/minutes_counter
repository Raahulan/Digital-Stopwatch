module minutes_counter (
	clk,
	rst,
	en,
	min,
	hour_tick
);
	input wire clk;
	input wire rst;
	input wire en;
	output reg [5:0] min;
	output wire hour_tick;
	always @(posedge clk or posedge rst)
		if (rst)
			min <= 0;
		else if (en) begin
			if (min == 59)
				min <= 0;
			else
				min <= min + 1;
		end
	assign hour_tick = (min == 59) && en;
endmodule
